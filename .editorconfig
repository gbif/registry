# GBIF .EDITORCONFIG

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 2 space indentation and import order
[*.{java,sql,xml,yaml,yml}]
indent_style = space
indent_size = 2
ij_java_imports_layout = org.gbif.**,|,java.**,|,javax.**,|,org.**,|,com.**,|,*,|,$*
ij_java_class_count_to_use_import_on_demand = 100
ij_java_names_count_to_use_import_on_demand = 100
