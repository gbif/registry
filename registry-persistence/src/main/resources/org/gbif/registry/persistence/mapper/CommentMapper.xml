<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.gbif.registry.persistence.mapper.CommentMapper">

  <sql id="WRITABLE_COMMENT_FIELDS">
    content,created,created_by,modified,modified_by
  </sql>

  <sql id="COMMENT_FIELDS">
    key,<include refid="org.gbif.registry.persistence.mapper.CommentMapper.WRITABLE_COMMENT_FIELDS"/>
  </sql>

  <!--
    key is never changed
   -->
  <sql id="COMMENT_UPDATE">
    content = #{content},
    modified = now(),
    modified_by = #{modifiedBy}
  </sql>

  <sql id="WRITABLE_COMMENT_FIELD_TYPES">
    #{content},
    now(), <!-- created -->
    #{createdBy},
    now(), <!-- modified -->
    #{createdBy}
  </sql>

  <insert id="createComment" parameterType="org.gbif.api.model.registry.Comment" useGeneratedKeys="true" keyProperty="key">
    INSERT INTO comment(<include refid="WRITABLE_COMMENT_FIELDS"/>)
    VALUES(<include refid="WRITABLE_COMMENT_FIELD_TYPES"/>)
  </insert>
</mapper>